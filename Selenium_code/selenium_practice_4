#understand action chains
from selenium import webdriver
from selenium.webdriver import ActionChains
from selenium.webdriver.common.by import By
from selenium.webdriver.support import expected_conditions as ec
import time

driver=webdriver.Chrome()
driver.get("https://rahulshettyacademy.com//AutomationPractice//")
driver.fullscreen_window()
driver.implicitly_wait(5)
action=ActionChains(driver)
action.scroll_by_amount(0,1000).perform()
#time.sleep(2)
action.move_to_element(driver.find_element(By.XPATH,'//div[@class="mouse-hover"]')).perform()
#time.sleep(2)
action.move_to_element(driver.find_element(By.LINK_TEXT, "Top")).click().perform()
time.sleep(2)